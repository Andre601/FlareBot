<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="com.bwfcwalshy.flarebot.ErrorCatcher" />
        <encoder>
            <pattern>[%d{yyyy.MM.dd HH:mm} %t %-5level] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
